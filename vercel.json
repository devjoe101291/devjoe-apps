{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/upload-to-r2.js": {
      "maxDuration": 300,
      "memory": 3008
    }
  },
  "headers": [
    {
      "source": "/api/upload-to-r2",
      "headers": [
        {
          "key": "x-vercel-max-body-size",
          "value": "524288000"
        }
      ]
    }
  ]
}
