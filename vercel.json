{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/upload-to-r2.js": {
      "maxDuration": 300,
      "memory": 3008
    },
    "api/upload-to-r2-complete.js": {
      "maxDuration": 120,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/api/upload-to-r2",
      "headers": [
        {
          "key": "x-vercel-max-body-size",
          "value": "524288000"
        }
      ]
    }
  ]
}
